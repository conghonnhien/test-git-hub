@model DienTu.Models.ViewModels.OrderDetailsViewModel
@{
    ViewData["Title"] = "Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="backgroundWhite">
    <div class="row px-3">
        <div class="col-8">
            <h2 class="text-info">Xác nhân đặt hàng</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Index" asp-controller="Home" class="btn btn-success form-control">New Order</a>
        </div>
    </div>

    @if (Model.OrderHeader != null)
    {
        <div style="color:maroon;" class="p-3">
            Hãy kiểm tra và xác nhận lại đơn hàng
            <br />
            Nếu gặp khó khăn , xin hãy liên hệ với chúng tôi : abc@gmail.com
        </div>

        <partial name="_IndividualOrderDetails" model="Model"></partial>
    }
    else
    {
        <div class="text-danger">
            Lỗi... Thử lại
        </div>
    }
</div>

