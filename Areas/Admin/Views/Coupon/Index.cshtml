@model IEnumerable<Coupon>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Coupon</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial"></partial>
        </div>
    </div>
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(a => a.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(a => a.Discount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(a => a.MinimumAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(a => a.IsActive)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(a => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(a => item.Discount)
                        </td>
                        <td>
                            @Html.DisplayFor(a => item.MinimumAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(a => item.IsActive)
                        </td>
                        <td>
                            <partial name="_TableButtonPartial" model="item.Id"></partial>
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>
                No Coupon Exits...
            </p>
        }
    </div>
</div>


