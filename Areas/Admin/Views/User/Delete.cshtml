@model DienTu.Models.ApplicationUser
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 class="text-danger">Delete User</h2>

<form asp-action="Delete" method="post" enctype="multipart/form-data">
    <div class="row backgroundWhite ">
        <br />

        <div class="col-8">
            <fieldset disabled>
                <div class="col-12 ">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Name" class="custom-label"></label>
                        </div>
                        <div class="col-8 offset-1">
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Email" class="custom-label"></label>
                        </div>
                        <div class="col-8 offset-1">
                            <input asp-for="Email" class="form-control" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="PhoneNumber" class="custom-label"></label>
                        </div>
                        <div class="col-8 offset-1">
                            <input asp-for="PhoneNumber" class="form-control" />
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="City" class="custom-label"></label>
                        </div>
                        <div class="col-8 offset-1">
                            <input asp-for="City" class="form-control" />
                        </div>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <div class="col-2">
                            <label asp-for="Province" class="custom-label"></label>
                        </div>
                        <div class="col-8 offset-1">
                            <input asp-for="Province" class="form-control" />
                        </div>
                        <span asp-validation-for="Province" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>
        </div>
       
        <div class="col-8 ">
            <div class="col-8 offset-3">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-danger form-control" value="Delete" asp-route-id="@Model.Id" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-primary form-control">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


