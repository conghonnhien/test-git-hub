@model IEnumerable<MenuItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">MenuItem List</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButtonPartial"></partial>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(a => a.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(a => a.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(a => a.CategoryId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(a => a.SubCategoryId)
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach(var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(a => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(a => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(a => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(a => item.SubCategory.Name)
                </td>
                <td>
                   <partial name="_TableButtonPartial" model="item.Id"></partial>
                </td>
            </tr>
                }
            </table>
        }
        else
        {
            <p>No MenuItem exits..</p>
        }
    </div>
</div>


