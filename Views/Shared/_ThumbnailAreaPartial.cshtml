@model IEnumerable<MenuItem>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

@if (Model.Count() > 0)
{
    <div class="col-12 post @Model.FirstOrDefault().Category.Name.Replace(" ",string.Empty) menu-elc">
        <div class="row">
            <h2 class="text-info">@Model.FirstOrDefault().Category.Name</h2>
        </div>

        @foreach (var item in Model)
        {
            <div class="border border-info rounded col-12" style="margin-bottom: 10px;margin-top:10px;padding:10px">
                <div class="row">
                    <div class="col-md-3 col-sm-12">
                        <img src="@item.Image" width="100%" height="100%"  style="border-radius:5px;border:1px solid #bbb9b9" />
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <div class="row pr-3">
                            <div class="col-8">
                                <label class="text-primary" style="font-size:21px;color:maroon">@item.Name</label>
                                @if (item.Guarantee == "0")
                                {
                                    <label style="font-size:12px;color:green">Không bảo hành</label>
                                }
                                @if (item.Guarantee == "6")
                                {
                                    <label style="font-size:12px;color: green">Bảo hành 6 tháng</label>
                                }
                                @if (item.Guarantee == "12")
                                {
                                    <label style="font-size:12px;color:green">Bảo hành 12 tháng</label>
                                }
                            </div>
                            <div class="col-4 text-right">
                                <label style="font-size:21px;color:maroon">$@item.Price</label>
                            </div>
                        </div>
                        <div class="row col-12 text-justify d-none d-md-block">
                            <label style="font-size:12px;color: deeppink">@item.Category.Name</label>
                        </div>
                        <div class="row col-12  text-justify d-none d-md-block">
                            <p>@Html.Raw(item.Description)</p>
                        </div>
                        <div class="col-md-3 col-sm-12 offset-md-9 text-center">
                            <a asp-action="Details" class="btn btn-success form-control" asp-route-id="@item.Id">Details</a>
                        </div>

                    </div>
                </div>

            </div>
        }
        <div class="p-4">

        </div>
    </div>

}